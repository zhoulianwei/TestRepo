commands:
  1_Install_Dependencies:
    command: sudo yum -y install fontconfig libXrender libXext xorg-x11-fonts-Type1 xorg-x11-fonts-75dpi freetype libpng zlib libjpeg-turbo openssl icu
    ignoreErrors: true
	
  2_Download_WkHtmlToPDF:
    test: test ! -f .wkhtmltox-0.12.6-1.amazonlinux2.x86_64.rpm
    command: sudo wget https://github.com/wkhtmltopdf/packaging/releases/download/0.12.6-1/wkhtmltox-0.12.6-1.amazonlinux2.x86_64.rpm

  3_RPM_Install_WkHtmlToPDF:
    test: test ! -f .wkhtmltopdf
    command: sudo rpm -i wkhtmltox-0.12.6-1.amazonlinux2.x86_64.rpm --force

  4_Test_Command:
    command: sudo bash -c 'echo "Test Log2" >> testlog.txt'